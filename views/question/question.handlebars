{{!-- JUMBOTRON BEGINNING --}}
<div class="container my-5 py-5 z-depth-1">


    <!--Section: Content-->
    <section class="dark-grey-text text-center">
        <h3 class="font-weight-bold pt-4 mb-4">How to Play</h3>

        <h5 class="font-weight-bold font-italic mb-5">Description here about purpose of game</h5>
        <div class="row mx-lg-5 mx-md-3">
            <div class="col-md-4 mb-4">
                <div class="view mb-5">
                    <iframe src="https://open.spotify.com/embed/playlist/1uv6vTxRZnksTy04AX6TRx" width="150" height="200" frameborder="0" allowtransparency="true" allow="encrypted-media"></iframe>
                </div>

                <h5 class="font-weight-normal text-muted">1. Play music</h5>

            </div>
            <div class="col-md-4 mb-4">

                <div class="view mb-5">
                    <img src="https://mdbootstrap.com/img/illustrations/undraw_grand_slam_0q5r.svg" class="img-fluid" alt="smaple image">
                </div>

                <h5 class="font-weight-normal text-muted">2. Answer with real honesty</h5>

            </div>
            <div class="col-md-4 mb-4">

                <div class="view mb-5">
                    <img src="https://mdbootstrap.com/img/illustrations/undraw_basketball_agx4.png" class="img-fluid" alt="smaple image">
                </div>

                <h5 class="font-weight-normal text-muted">3. Listen well - don't moralize, egg on, stay positive, and ask </h5>

            </div>
        </div>

    </section>
    <!--Section: Content-->


</div>

{{!-- JUMBOTRON ENDING --}}
{{#each question}}
  <div class="container my-5 py-5 z-depth-1">

    <!--Section: Content-->
    <section class="text-center px-md-5 mx-md-5 dark-grey-text">

      <!--Grid row-->
      <div class="row d-flex justify-content-center">

        <!--Grid column-->
        <div class="col-lg-7">

          <p>{{this.question_string}}</p>

    <!--Section: Content-->
<div class="row">


                <div class="col">

                                            <form class="favQuestionForm">
                                                <input type="hidden" value={{this.friend_id}} name="friend_id" id="questionform_friend_id" />
                                                <input type="hidden" value={{this.user_id}} name="questionform_user_id" id="questionform_user_id" />
                                                <input type="hidden" value={{this.id}} name="questionform_question_id" id="questionform_question_id" />
                                                <button type="submit" name="favorite" value={{this.id}} class="btn btn-light-blue favoriteQuestionForm">Favorite
                                                </button>
                                            </form>

                                        </div>
                                        <div class="col">
                                            <form class="markAsDone">
                                                <input type="hidden" value={{this.friend_id}} name="friend_id" id="questionform_friend_id" />
                                                <input type="hidden" value={{this.user_id}} name="user_id" id="questionform_user_id" />
                                                <input type="hidden" value={{this.id}} name="questionform_question_id" id="questionform_question_id" />
                                                <button type="submit" name="makeAsDone" value={{this.id}} class="btn btn-light-blue markAsDone">Mark as Done
                                                </button>
                                            </form>

                                        </div>
            
            </div>

        </div>
        <!--Grid column-->

      </div>
      <!--Grid row-->
    </section>
    </div>
        
{{/each}}