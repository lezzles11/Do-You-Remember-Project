<nav class="navbar sticky-top navbar-light lighten-4">
    <a href="/categories/{{user_id}}/{{friend_id}}">
        <button type="button" class="navbar-brand white btn btn-outline-dark waves-effect">Pick another category
        </button>
    </a>
</nav>


{{!-- JUMBOTRON BEGINNING --}}
<div class="container my-5 py-5 z-depth-1">


    <!--Section: Content-->
    <section class="dark-grey-text text-center">

        <h3 class="font-weight-bold pt-4 mb-4">How to Play</h3>

        <h5 class="font-weight-bold font-italic mb-5">Description here about purpose of game</h5>

        <div class="row mx-lg-5 mx-md-3">
            <div class="col-md-6 mb-4">

                <div class="view mb-5">
                    <img src="https://mdbootstrap.com/img/illustrations/undraw_grand_slam_0q5r.svg" class="img-fluid" alt="smaple image">
                </div>

                <h5 class="font-weight-normal text-muted">Quote here .</h5>

            </div>
            <div class="col-md-6 mb-4">

                <div class="view mb-5">
                    <img src="https://mdbootstrap.com/img/illustrations/undraw_basketball_agx4.png" class="img-fluid" alt="smaple image">
                </div>

                <h5 class="font-weight-normal text-muted">Second quote here.</h5>

            </div>
        </div>

    </section>
    <!--Section: Content-->


</div>

{{!-- JUMBOTRON ENDING --}}
{{#each question}}

    <!--Section: Content-->
    <section class="text-center">

        <style>
            @media (max-width: 767px) {
                .social-buttons .btn {
                    padding: 8px 15px;
                    margin: 1px;
                }
            }
        </style>

        <!-- Featured image -->
        <img src="https://www.cerclemagazine.com/wp-content/uploads/2017/10/316_N-Atlantic-Ocean-Cliffs-of-Moher-1989.jpg" class="img-fluid z-depth-1 rounded mb-4" alt="">

        <p class="mb-4">
            {{this.question_string}}
        </p>

        <!-- Interactions -->
        <div class="row">
            {{!-- Submit form --}}

            <div class="col">
                <form class="favQuestionForm">
                    <input type="hidden" value={{this.friend_id}} name="friend_id" id="questionform_friend_id" />
                    <input type="hidden" value={{this.user_id}} name="questionform_user_id" id="questionform_user_id" />
                    <input type="hidden" value={{this.id}} name="questionform_question_id" id="questionform_question_id" />
                    <button type="submit" name="favorite" value={{this.id}} class="btn btn-outline-dark waves-effect favoriteQuestionForm">Favorite
                    </button>
                </form>
            </div>
            <div class="col">
                <form class="markAsDone">
                    <input type="hidden" value={{this.friend_id}} name="friend_id" id="questionform_friend_id" />
                    <input type="hidden" value={{this.user_id}} name="user_id" id="questionform_user_id" />
                    <input type="hidden" value={{this.id}} name="questionform_question_id" id="questionform_question_id" />
                    <button type="submit" name="makeAsDone" value={{this.id}} class="btn btn-outline-dark waves-effect markAsDone">Mark as Done
                    </button>
                </form>
            </div>
        </div>
        <!-- Interactions -->


    </section>
    <!--Section: Content-->


    </div><br /><br />
{{/each}}